@model IEnumerable<To_Do_App.Models.TaskToDo>

@{
    ViewData["Title"] = "Index";
}

<h1>@*Index*@ </h1>

<p>
    <a class="remove-line" asp-action="Create">Add New Task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Task)
                </td>
            <td>
                    <a class="remove-line" asp-action="Details" asp-route-id="@item.Id">Description</a> |
                    <a class="remove-line btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-plus-square"></i>&nbsp;
                        </a> |
                <a class="remove-line btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash3"></i>&nbsp;

                </a>
            </td>
        </tr>
}
    </tbody>
</table>
